		</perspectiveExtension> 
		<perspectiveExtension targetID="org.jboss.tools.jst.cssPerspective"> 
			<actionSet id="org.jboss.tools.vpe.cordovasim.eclipse.actionSet"/> 
		</perspectiveExtension> 
	</extension>
