   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.jboss.tools.vpe.cordovasim.eclipse.actionSet"
            label="CordovaSim"
            visible="false">
            	<action
                   id="org.jboss.tools.vpe.cordovasim.eclipse.runCordovaSim"
                   definitionId="org.jboss.tools.vpe.cordovasim.eclipse.commands.runCordovaSim"
                   toolbarPath="cordovaSim"
                   label="Run CordovaSim"
                   class="org.jboss.tools.vpe.cordovasim.eclipse.actions.RunCordovaSimAction"
                   icon="icons/cordovasim_16.png">
            	</action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            extensions="htm, html"
            icon="icons/cordovasim_16.png"
            id="org.jboss.tools.vpe.cordovasim.eclipse.editors.CordovaSimLauncher"
            launcher="org.jboss.tools.vpe.cordovasim.eclipse.editors.CordovaSimEditorLauncher"
            name="CordovaSim">
      </editor>
   </extension>
   <extension point="org.eclipse.ui.browser.browsers">
       <browser
             executable=""
             factoryclass="org.jboss.tools.vpe.cordovasim.eclipse.CordovaSimFactory"
             id="org.jboss.tools.vpe.cordovasim.eclipse"
             name="CordovaSim"
             os="Win32,linux,MacOSX">
          <location>
             .
          </location>
   </browser>
   </extension>
	<extension point="org.eclipse.ui.perspectiveExtensions"> 
		<perspectiveExtension targetID="org.jboss.tools.common.ui.JBossPerspective"> 
			<actionSet id="org.jboss.tools.vpe.cordovasim.eclipse.actionSet"/> 
		</perspectiveExtension> 
		<perspectiveExtension targetID="org.jboss.tools.jst.web.ui.WebDevelopmentPerspective"> 
